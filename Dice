import random

class Dice:
    def __init__(self, sides=6):
        self.sides = sides

    def roll(self):
        return random.randint(1, self.sides)

if __name__ == "__main__":
    d = Dice(6) # create a dice with 6 sides
    print("Rolling the dice...")
    result = d.roll()
    print("You rolled a", result)
